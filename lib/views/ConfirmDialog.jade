Modal
    .modal-header
        h2=this.props.title
    .modal-body= "Sind sie sicher, dass sie "+this.props.question+"?"
    .modal-footer
        button.btn.btn-default(onClick=this.answer(false).bind(this)) Abbrechen
        button.btn.btn-primary(onClick=this.answer(true).bind(this))= this.props.action
script.
    var Modal = require("./Modal.jade");
    exports.answer = function(yes){
        return function(){
            if(this.props.onAnswer){
                this.props.onAnswer(yes);
            }else if(yes){
                this.props.onConfirm();
            }else{
                this.props.onCancel();
            }
        }.bind(this)
    }
